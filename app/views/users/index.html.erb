<div>

<div class="container">
 <div class="row">

  <div class="col-md-12">
    <div class="page-header text-center">
      <h1> Foodies </h1>
    </div>
  </div>

 <% @users.each do |user| %>
  <div class="col-md-3 col-sm-4 col-xd-6 text-center user-item">
    <div class="foodies_background">
        <%= link_to user_path(user) do%>
        <% for img_id in 1..7 %>
            <% if image_path(user.avatar).include? ('/'+img_id.to_s+'.png') %>
                <%= image_tag('/img/'+img_id.to_s+'.png', class: "img-responsive center-block img-rounded img") %>
            <% end %>
        <% end %>
        <h4><%= user.name%></h4>
        <% end %>
        <%= render partial: "shared/follow", locals: {user: user} %>
        <%= render partial: "shared/friend", locals: {user: user} %>
    </div>
  </div>
 <% end %>

 </div>
</div>
